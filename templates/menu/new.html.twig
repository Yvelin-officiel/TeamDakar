{% extends 'base.html.twig' %}

{% block title %}Créer un Nouveau Menu{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mb-4">Créer un Nouveau Menu</h1>

        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.title, 'Titre du Menu') }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le titre du menu'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.description, 'Description') }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Entrez une description du menu', 'rows': 4}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.logo_url, 'URL du Logo') }}
                {{ form_widget(form.logo_url, {'attr': {'class': 'form-control', 'placeholder': 'Entrez l\'URL du logo (facultatif)'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.primary_color, 'Couleur principale') }}
                {{ form_widget(form.primary_color, {'attr': {'class': 'form-control color-picker'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.secondary_color, 'Couleur secondaire') }}
                {{ form_widget(form.secondary_color, {'attr': {'class': 'form-control color-picker'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.font_family, 'Famille de police') }}
                {{ form_widget(form.font_family, {'attr': {'class': 'form-control', 'placeholder': 'Entrez la famille de police'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.font_size, 'Taille de police') }}
                {{ form_widget(form.font_size, {'attr': {'class': 'form-control', 'placeholder': 'Entrez la taille de police (ex: 16px)'}}) }}
            </div>

            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-success">Créer le Menu</button>
            </div>
        {{ form_end(form) }}

        <div class="mt-3 text-center">
            <a href="{{ path('menu_index') }}" class="btn btn-secondary">Retour à la liste des menus</a>
        </div>
    </div>
{% endblock %}
